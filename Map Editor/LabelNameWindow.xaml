<Window x:Class="MapEditor.LabelNameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Landmark Label" Height="111" Width="310" ResizeMode="NoResize" WindowStyle="ToolWindow" WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight">
	<Grid>
		<TextBox Name="textbox" KeyDown="TextBox_KeyDown" Text="{Binding Path=EnteredText}"  Height="23" Margin="10,10,10,0" TextWrapping="Wrap" VerticalAlignment="Top" />
		<Button Content="OK" HorizontalAlignment="Left" Margin="207,38,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
	</Grid>
</Window>
